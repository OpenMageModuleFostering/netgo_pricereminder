<config>
    <tabs>
        <netgo translate="label" module="netgo_pricereminder">
            <label>Netgo</label>
            <sort_order>0</sort_order>
        </netgo>
    </tabs>
    <sections>
        <netgo_pricereminder translate="label" module="netgo_pricereminder">
            <class>separator-top</class>
            <label>Price Reminder</label>
            <tab>netgo</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <netgopricereminder translate="label" module="netgo_pricereminder">
                    <label>Netgopricereminder</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
					 <enablenotifier translate="label">
                            <label>Enable Extension</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablenotifier>
						 <enablejquery translate="label">
                            <label>Enable jQuery</label>
							   <comment>jQuery will be added before prototype</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablejquery> 
                    </fields>
                </netgopricereminder>
				<emailsettings  translate="label" module="netgo_pricereminder">
				  <label>Email Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
				      <fields>
					     <headcolor translate="label comment">
                            <label>Header Background color</label>
                            <comment>Use hash code ,default is "#23c1da"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </headcolor>
						 <headtextcolor translate="label comment">
                            <label>Header Text color</label>
                            <comment>Use hash code ,default is "#ffffff"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </headtextcolor>
						<nmmfixed translate="label comment">
                            <label>Mail Message(Fixed Price)</label>
                            <comment>Notification Mail Message for fixed price subscribers</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nmmfixed>
						<nmmvariable translate="label comment">
                            <label>Mail Message(Variable Price)</label>
                            <comment>Notification mail message for variable price subscribers</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </nmmvariable>
					  </fields>
				</emailsettings>
				 <popupsettings  translate="label" module="netgo_pricereminder">
				  <label>Popup Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
				      <fields>
					     <headcolor translate="label comment">
                            <label>Background color</label>
                            <comment>Use hash code ,default is "#ccc"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </headcolor>
						
						 <headtextcolor translate="label comment">
                            <label>Header Text color</label>
                            <comment>Use hash code ,default is "#000"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </headtextcolor>
						
						<headertext translate="label comment">
                            <label>Header Text</label>
                            <comment>Popup Header Text</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </headertext> 
						<buttontext translate="label comment">
                            <label>Button Text</label>
                            <comment>Button Text,default is "follow price"</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </buttontext>
						<enablefixednotifier translate="label">
                            <label>Enable Fixed Price Notifier</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablefixednotifier>
						<enablevariablenotifier translate="label">
                            <label>Enable Variable Price Notifier</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablevariablenotifier>
					  </fields>
				</popupsettings>
            </groups>
        </netgo_pricereminder>
    </sections>
</config>
